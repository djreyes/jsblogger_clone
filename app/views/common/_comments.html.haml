- subject.comments.each do |comment|
  %div.comment
    %p
      %em= comment.author_name
      said #{distance_of_time_in_words(subject.created_at, comment.created_at)} later:
    %p= comment.body
%h4 Add Your Comment
= form_for(subject.comments.new) do |f|
  %p= f.label :author_name
  = f.text_field :author_name
  %br/
  %p= f.label :body
  = f.text_area :body
  %br/
  = f.hidden_field :article_id
  = f.submit "Save"